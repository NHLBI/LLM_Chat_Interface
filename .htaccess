# Deny direct access to internal directories and logs
RedirectMatch 404 ^/(logs|docs|tests|var(?:/|$)|playwright-report|test-results)/
# Deny hidden files/directories (dotfiles), but allow ACME challenge paths.
RedirectMatch 404 (?i)^/(?!\.well-known(?:/|$))(?:.*\/)?\.[^/]+(?:/|$)

